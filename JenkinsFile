pipeline {
    agent any
    tools {
        maven "M3"
    }
    stages {
         stage ('Checkout') {
            steps {
               git 'https://github.com/RAGAVIKRISHNA/Planit-UI-Automation.git'
        }

        stage ('Build') {
            steps {
                sh "mvn clean install"
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
}